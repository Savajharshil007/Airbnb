<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Edit Your Listing</h3>
      <form
        action="/listings/<%=listing._id%>?_method=PUT"
        method="post"
        class="needs-validation"
        enctype="multipart/form-data"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            name="listing[title]"
            placeholder="enter title"
            value="<%=listing.title%>"
            required
          />
          <div class="valid-feedback">looks good!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            placeholder="enter description"
            required
          >
<%=listing.description%></textarea
          >
          <div class="invalid-feedback">Description should be valid</div>
        </div>

        <div class="mb-3">
          Original Listing Image <br>
          <img src="<%= originalImageUrl  %>" alt="" width="250px">
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            type="file"
            class="form-control"
            name="listing[image]"
            placeholder="enter image"
          />
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" id="category" class="form-select">
            <option value="<%=listing.category%>"><%= listing.category %></option>
            <option value="mountain">mountain</option>
            <option value="arctic">arctic</option>
            <option value="amazing pools">amazing pools</option>
            <option value="camping">camping</option>
            <option value="castles">castles</option>
            <option value="iconic cities">iconic cities</option>
            <option value="rooms">rooms</option>
            <option value="domes">domes</option>
            <option value="boats">boats</option>
          </select>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              id="price"
              class="form-control"
              name="listing[price]"
              placeholder="enter price"
              value="<%=listing.price%>"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
            <input
              type="text"
              id="country"
              class="form-control"
              name="listing[country]"
              placeholder="enter country"
              value="<%=listing.country%>"
              required
            />
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label">country</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            placeholder="enter location"
            value="<%=listing.location%>"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button type="submit" class="btn btn-dark add-btn mt-3">Edit</button>
      </form>
      <br />
    </div>
  </div>
</body>
